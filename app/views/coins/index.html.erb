<p style="color: green"><%= notice %></p>

<h1>Moedas</h1>

<p><%= data_br Date.today %></p>

<table>
  <thead>
    <tr>
      <th>Descrição</th>
      <th>Sigla</th>
      <th>Imagem</th>
      <th colspan="1"></th>
    </tr>
  </thead>
  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td><%= image_tag coin.url_image, width:25, height:25 %></td>
        <td><%= link_to "Mostrar", coin %></td>
        <td><%= link_to "Editar", edit_coin_path(coin)%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Nova moeda", new_coin_path %>
